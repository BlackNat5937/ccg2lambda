<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visualization.controller.inputController">
    <top>
        <HBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Write a sentence" textAlignment="CENTER" textOrigin="TOP" wrappingWidth="115.626953125" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Text>
                <TextField fx:id="sentenceField" prefHeight="26.0" prefWidth="635.0" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="addButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#addSentence" text="Add" HBox.hgrow="NEVER" />
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <ListView fx:id="listSentences" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </ListView>
    </center>
    <bottom>
        <VBox minHeight="-Infinity" prefHeight="45.0" prefWidth="100.0" BorderPane.alignment="TOP_CENTER">
            <children>
                <StackPane prefHeight="150.0" prefWidth="200.0" VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="visualizeButton" mnemonicParsing="false" onAction="#visualize" text="Visualize"
                                StackPane.alignment="TOP_CENTER"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </StackPane>
                <ProgressBar maxWidth="1.7976931348623157E308" progress="0.0">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ProgressBar>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </VBox>
    </bottom>
</BorderPane>
